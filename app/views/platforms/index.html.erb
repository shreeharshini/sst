<p id="notice"><%= notice %></p>

<h1>Platforms</h1>

<table>
  <thead>
    <tr>
      <th>Abbrev</th>
      <th>Name</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.abbrev %></td>
        <td><%= platform.name %></td>
        <td><%= platform.created_by %></td>
        <td><%= platform.updated_by %></td>
        <td><%= link_to 'Show', platform %></td>
        <td><%= link_to 'Edit', edit_platform_path(platform) %></td>
        <td><%= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Platform', new_platform_path %>
