

<body  class="dashboard-page">
 
 
 <section class="wrapper scrollable">
  
  <%= render :partial => '/layouts/side_bar_navigation'%>

        <%= render :partial => '/layouts/header'%>



<div class="row-fluid" style="margin-bottom:50px; min-height:450px;">    
	<div class="main-grid" >
			   <div class="clearfix"></div>
   <ol class="breadcrumb"> <li><a href="/loginpage">Home</a></li>
			         <li><a href="/loginpage/selectedplatforms">Selected platforms</a></li>
			     </ol>

			 <div class="col-xs-12 col-md-5 col-md-offset-4">
			 
			 <div class="payment_box ">
			 
			 
				<h2 class="box_tittle">Contact Us</h2>
				 
					<%= form_for :contact_u, class: "form-horizontal", url: contact_us_path do |f| %>
					                 
						<div class="row">
							<div class="col-xs-12">
								<%= f.label :name %>
								<%= f.text_field :name, class: "form-control" %>
	          		 		</div>
						</div>

						<div class="row">
							<div class="col-xs-12">
							<%= f.label :email %>
							<%= f.text_field :email, class: "form-control"%>
						</div>
						</div>

						<div class="row">
							<div class="col-xs-12">
							<%= f.label :subject %>
							<%= f.text_field :subject, class: "form-control"%>
						</div>
						</div>

						<div class="row">
							<div class="col-xs-12">
							<%= f.label :message %>
							<%= f.text_area :message, class: "form-control"%>
						</div>
						</div>

						<div class="row">
							<div class="col-xs-12">
							<%= f.submit "send message", style: "margin-top:15px ", class: "hoverable btn btn-success btn-block" %>
						</div>
						</div>
					<% end %>
			</div>

			</div>
			</div>
			</div>	 
			<div class="clearfix"></div>
	</div>
<%= render :partial => '/layouts/footer'%>
</section>
</body>
</html>