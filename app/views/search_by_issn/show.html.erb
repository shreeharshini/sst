            </div>
            <%= button_to "search", :class => "button" %>
<% end %>

<script type="text/javascript">
   $('#the-basics').typeahead({
          ajax: '/search_by_issn/load_suggestions',
          displayField: 'serial_number',
          valueField: 'id',
          onSelect: load_suggestions
      });
</script>



