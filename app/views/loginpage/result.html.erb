<body  class="dashboard-page">
 
 
 <section class="wrapper scrollable">
  
  <%= render :partial => '/layouts/side_bar_navigation'%>

        <%= render :partial => '/layouts/header'%>
  
    <div class="main-grid">
        
        
        <ol class="breadcrumb"> <li><a href="" onclick="window.location = '/loginpage'">Home</a></li>
         <li><a href="/loginpage/sourcereports">Source Reports</a></li> 
        <li><a href="">Platform Source Reports</a></li>
        </ol>



<%@acc.each do |f|%>
Account name:
<%= f.name%><br>
<%end%>

<% @plts.each do |f| %>
Platform name:
<%= f.name%>
<%end%>

<%= form_for(:sourcerepo, url: {action: "result"}, html: {method: "get"}) do |f| %>
 <div class="col-md-5 mb10">   
      <div class="form-group"> 
        <label>Reporting Period</label>  
          <%= f.select :year, options_for_select(@years.collect { |reports|
            [reports.year, reports.year] }, 0), {}, { :class => 'reports_selected  form-control' } %>


      </div>
    </div>
<%end%>

<div class="agile-Updating-grids"> 
          <div class="agile-grids">
            <div class="col-md-12" style="padding:0px;">
              <div class="span12">
                <div class="col-md-12" >
                  <div class="well">
                   <div class="table-responsive ownTblContent"> 
                      <table>
                      <thead>
                        <th>Report Type</th>
                        <th>Description</th>
                        <th>File</th>
                      </thead>
                      <tbody>
                      <tr>
                        <p><% @repos.each do |f| %>
                          <td><%= f.name%></td>
                          <td><%= f.description %></td>
                          <td><%= link_to image_tag("xls.png", :alt => "Image Description", :class => "css", :size => "20x20"), reports_path(format: :xlsx)  %><br></td>
                          <%end%>
                        </p>
                        </tr>
                        </tbody>
                      </table>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> 



<p><%= link_to 'Go Back', sourcereports_loginpage_index_path %></p>

</div>

<!-- footer -->
<%= render :partial => '/layouts/footer'%>

</section>
</body>


<script>
    $("#year").change(function(){
       var value1 = $('select#year option:selected').val();
        $.ajax({
            type:"GET",
            url:"/loginpage/getreports",
            dataType:"js",
            data: {platform_id: value1 },
            success:function(result){
               
               alert("success");
                    
                }
                      
        })
    });
  </script>

