<div class="agile-Updating-grids"> 
  <div class="agile-grids pad-top10">

    <%= form_tag({:controller => "loginpage", :action => "dynamic_show"}, {:method => "get", :remote => true}) do %>

	    <div class="col-xs-12 col-md-5 mb10">
      	<label> Select Report Type: </label>
	      <div class="form-group">
	     		<%= select_tag(:Report_Type, options_for_select(@lib_code, prompt = nil),
	  				{ :class => 'form-control' })  %>
		 		</div>
      </div>

	     	<div class="col-xs-12 col-md-5 mb10">
          <div class="col-xs-6 col-md-6">
            <div style="padding:0px;">
              <div class=" wrapper">
  	      			<label> From: </label>
  	      			<div class="input-group">
  	      				<%= text_field_tag :start_date, "MM/YYYY" %> 
                </div>
              </div>
            </div>
          </div>

          <div class="col-xs-6 col-md-6">
            <div style="padding:0px;">
              <div class=" wrapper">
  	      			<label> To: </label>
  	      			<div class="input-group">
  	      				<%= text_field_tag :end_date, "MM/YYYY" %> 
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="  col-xs-12 col-md-2 mt-30">
        	<div class="anim"></div>
	    			<%= submit_tag("Preview Report", :class=>"button raised") %>
      		</div>
      	</div>
        <div class="clearfix"> </div>
	  	</div>
  	<% end %>
  </div>
</div>		