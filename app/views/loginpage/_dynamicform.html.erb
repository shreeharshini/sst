<div class="agile-Updating-grids"> 
  <div class="agile-grids pad-top10">

    <%= form_tag({:controller => "loginpage", :action => "test2"}, {:method => "get", :remote => true}) do %>

	    <div class="col-xs-12 col-md-5 mb10">
      	<label> Select Report Type: </label>
	      <div class="form-group">
	     		<%= select_tag(:Report_Type, options_for_select(@lib_code, prompt = nil),
	  				{ :class => 'form-control' })  %>
		 		</div>
      </div>

	     	<div class="col-xs-12 col-md-5 mb10">
          <div class="col-xs-6 col-md-6">
            <div style="padding:0px;">
              <div class=" wrapper">
  	      			<label> From: </label>
  	      			<div class="input-group">
  	      				<%= text_field :start_date, :startdate , :class => 'datepicker' %> 
                 <input id="start_date"
                               class="input-sm form-control"
                               type="text" 
                               ng-model="datePicker"
                               placeholder="Select a date"
                               datepicker />
                  <label for="datePicker" class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></label>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xs-6 col-md-6">
            <div style="padding:0px;">
              <div class=" wrapper">
  	      			<label> To: </label>
  	      			<div class="input-group">
  	      				<%= text_field :end_date, :enddate , :class => 'datepicker' %> 
                  <input id="end_date"
                               class="input-sm form-control"
                               type="text" 
                               ng-model="datePicker"
                               placeholder="Select a date"
                               datepicker />
                  <label for="datePicker" class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="  col-xs-12 col-md-2 mt-30">
        	<div class="anim"></div>
	    			<%= submit_tag("Preview Report", :class=>"button raised") %>
      		</div>
      	</div>
        <div class="clearfix"> </div>
	  	</div>
  	<% end %>
  </div>
</div>		